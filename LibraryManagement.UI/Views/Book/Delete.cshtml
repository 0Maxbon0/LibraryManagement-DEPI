@model LibraryManagement.Models.Book

<h2>Delete Book</h2>

<div class="delete-book-container">
    <h3>Confirm Deletion</h3>
    <p>Are you sure you want to delete this book? This action cannot be undone.</p>

    <div class="book-details">
        <p>
            <strong>Title:</strong> @Model.Title <br />
            <strong>Author:</strong> @Model.Author <br />
            <strong>Genre:</strong> @Model.Genre <br />
        </p>
    </div>

    <form asp-action="DeleteConfirmed" asp-route-id="@Model.BookID" method="post">
        <input type="hidden" asp-for="BookID" />

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-danger px-4">Delete</button>
            <a asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
        </div>
    </form>
</div>


<style>
    /* General Styles */
    body {
        font-family: Arial, sans-serif;
        background-color: #f8f9fa; /* Light background */
        margin: 0;
        padding: 20px;
    }

    h2 {
        text-align: center;
        color: #333;
        margin-bottom: 20px;
    }

    .delete-book-container {
        max-width: 500px; /* Limit width for readability */
        margin: 0 auto; /* Center the container */
        background-color: #fff; /* White background */
        padding: 20px; /* Padding inside the container */
        border-radius: 10px; /* Rounded corners */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Shadow for depth */
        text-align: center; /* Centered text */
    }

    .book-details {
        margin: 20px 0; /* Spacing around book details */
        padding: 10px;
        border: 1px solid #ddd; /* Light border */
        border-radius: 5px; /* Rounded corners for details */
        background-color: #f9f9f9; /* Light background for details */
    }

    .form-actions {
        margin-top: 20px; /* Spacing above action buttons */
        display: flex;
        justify-content: space-between; /* Space between buttons */
    }

    .btn {
        padding: 10px 15px; /* Padding for buttons */
        border-radius: 5px; /* Rounded corners for buttons */
        font-size: 1em; /* Button font size */
        cursor: pointer; /* Pointer on hover */
        transition: background-color 0.3s; /* Smooth background color transition */
    }

    .btn-danger {
        background-color: #dc3545; /* Red background */
        color: white; /* White text */
        border: none; /* No border */
    }

        .btn-danger:hover {
            background-color: #c82333; /* Darker red on hover */
        }

    .btn-secondary {
        background-color: #6c757d; /* Gray background */
        color: white; /* White text */
        border: none; /* No border */
    }

        .btn-secondary:hover {
            background-color: #5a6268; /* Darker gray on hover */
        }
</style>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}