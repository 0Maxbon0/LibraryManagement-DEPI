@{
    ViewData["Title"] = "Home Page";
}

<style>
    .container {
        width: 80%;
        margin: 0 auto;
        text-align: center;
    }

    .welcome-title {
        font-size: 2.5rem;
        margin-bottom: 20px;
    }

    .welcome-img {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        margin-bottom: 20px;
    }

    .btn {
        padding: 10px 20px;
        text-decoration: none;
        color: white;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

    .btn-log {
        background-color: #198754;
    }

    .btn-reg {
        background-color: #6c757d;
    }

    .btn-container {
        margin-bottom: 30px;
    }

    .btn-log:hover {
        background-color: darkgreen; 
    }

    .btn-reg:hover {
        background-color: darkgray; 
    }

    .info-section {
        background-color: #f8f9fa;
        padding: 20px;
        border-radius: 5px;
        margin-top: 20px;
    }
</style>
<div class="container">
    <h1 class="welcome-title">Welcome to Our Website</h1>

    <img src="/images/Leonardo_Phoenix_A_warm_and_inviting_digital_illustration_of_a_1.jpg" class="welcome-img" alt="welcome image">

   
    <div class="btn-container">
       
        <a asp-controller="Account" asp-action="Login" class="btn btn-log">Login</a>
        <a asp-controller="Account" asp-action="Register" class="btn btn-reg">Register</a>
        <a asp-controller="Book" asp-action="Index" class="btn btn">Books</a>
    </div>

    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>

    <div class="info-section">
        <h3>Why Choose Us?</h3>
        <p>Our website offers cutting-edge solutions for modern web applications, built on ASP.NET Core. Join us and learn more about the latest web technologies!</p>
    </div>
</div>
